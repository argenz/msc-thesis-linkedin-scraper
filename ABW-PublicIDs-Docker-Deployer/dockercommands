docker cp [container ID]:[container directory] [host directory]

# build container 
docker build -t [name of image] [directory of Dockerfile]

# rstart and un container from image in bash 
docker run -it [image name] /bin/bash

# run existing container 
docker start [container name] #prints back name of container

